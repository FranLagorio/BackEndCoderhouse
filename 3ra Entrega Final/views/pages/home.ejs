<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous" />
  <link rel="stylesheet" href="/styles.css" />
  <title>CursoBackEnd</title>
</head>

<body class="d-flex flex-column min-vh-100">

  <header>
    <%- include('../partials/navbar')%>
  </header>

  <div class=" container d-flex flex-column w-50 my-2">
    <h1 class="text-center text-uppercase"> BIENVENIDO</h1>
    <div class="d-flex flex-row justify-content-center align-items-center">
      <img src="./uploads/<%=user.image%>" style="height: 250px;">
      <div>
        <h2 class="text-center text-uppercase">
          <%= user.name %>
        </h2>
        <p>Edad: <%= user.age %>
        </p>
        <p>Direccion: <%= user.addres %>
        </p>
        <p>Numero: <%= user.phone %>
        </p>
      </div>
    </div>

  </div>
  <div>

    <table class="table my-1">
      <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Name</th>
          <th scope="col">Price</th>
          <th scope="col">Imagen</th>
        </tr>
      </thead>
      <tbody id="productsTable">

        <% products.forEach((element)=> { %>
          <tr>
            <th scope="row">
              <%=element.id%>
            </th>
            <td style="text-transform: uppercase">
              <%=element.name%>
            </td>
            <td>
              <%=element.price%>
            </td>
            <td>
              <img src="<%=element.thumbnail%>" class="w-50" alt="..." />
            </td>
          </tr>
          <%})%>

      </tbody>
    </table>
  </div>





  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
    crossorigin="anonymous"></script>

  <footer class="mt-auto footer">
    <%- include('../partials/footer')%>
  </footer>

  <script>document.getElementById("logout").classList.remove("d-none");</script>
</body>

</html>