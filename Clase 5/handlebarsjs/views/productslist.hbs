{{> navbar}}

<h1 class="text-center">Vista de Productos</h1>
<div class="container d-flex w-25 ">
    <table class="table my-1">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Title</th>
                <th scope="col">Price</th>
                <th scope="col">Thumbnail</th>
            </tr>
        </thead>
        <tbody>
            {{#if productsExist}}
            {{#each products}}
            <tr>
                <th scope="row">
                    {{this.id}}
                </th>
                <td style="text-transform: uppercase;">
                    {{this.title}}
                </td>
                <td>${{this.price}}
                </td>
                <td><img src="{{this.thumbnail}}" class="product-img" alt="..." /></td>
            </tr>

            {{!-- <div class="card text-center mx-3" style="width: 18rem;">
                <img src="{{this.thumbnail}}" class="card-img-top product-img" alt="...">
                <div class="card-body">
                    <h5 class="card-title text-uppercase ">{{this.title}}</h5>
                    <p class="card-text">${{this.price}}</p>
                    <a href="/products/{{this.id}}" class="btn btn-primary">Ver detalle</a>
                </div>
            </div> --}}

            {{/each}}
            {{/if}}
        </tbody>
    </table>

</div>

<div class="container bg-gradient text-center my-4">
    <a class="btn btn-success" href="/form"> Volver a Formulario</a>
</div>

{{> footer}}