{{> navbar}}

{{!-- FORMULARIO --}}
<div class="container w-25 bg-light my-2 p-2 rounded">
    <h1 class="text-center">FORMULARIO DE CARGA</h1>
    <form id="formProduct"  onsubmit="return submitProduct(event)">
        {{!-- method="post" action="/" --}}
        <div class="mb-3">
            <label for="exampleFormControlInput1" class="form-label">ID:</label>
            <input type="text" class="form-control" name="id" id="id" placeholder="Numero de ID">
        </div>
        <div class="mb-3">
            <label for="exampleFormControlInput1" class="form-label">Title:</label>
            <input type="text" class="form-control" name="title" id="title" placeholder="Product Title">
        </div>
        <div class="mb-3">
            <label for="exampleFormControlInput1" class="form-label">Price:</label>
            <input type="text" class="form-control" name="price" id="price" placeholder="Product Price">
        </div>
        <div class="mb-3">
            <label for="exampleFormControlInput1" class="form-label">Thumbnail:</label>
            <input type="text" class="form-control" name="thumbnail" id="thumbnail" placeholder="Product Thumbnail">
        </div>

        <div class="text-center">
            <input type="submit" class="btn btn-success" id="submit" value="Agregar Producto" />
        </div>
        
    </form>
</div>

{{!-- LISTADO DE PRODUCTOS --}}

<div class="container d-flex flex-column w-25 my-2">
    <h2 class="text-center">LISTADO DE PRODUCTOS</h2>
    <table class="table my-1" >
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Title</th>
                <th scope="col">Price</th>
                <th scope="col">Thumbnail</th>
            </tr>
        </thead>
        <tbody id="productsTable">
            {{#if productsExist}}
            {{#each products}}
            <tr>
                <th scope="row">
                    {{this.id}}
                </th>
                <td style="text-transform: uppercase;">
                    {{this.title}}
                </td>
                <td>${{this.price}}
                </td>
                <td><img src="{{this.thumbnail}}" class="product-img" alt="..." /></td>
            </tr>
            {{/each}}
            {{/if}}
        </tbody>
    </table>

</div>
<div class="container d-flex flex-column align-items-center w-25 bg-light my-2 mb-5">
    <h2 class="text-center">CENTRO DE MENSAJES</h2>
    <input type="email" id="caja-nombre" class="form-control w-100" value="" placeholder="Nombre...@email.com" />
    <div class="w-100 text-center" id="div-chats"></div>
    <div class="d-flex flex-row no-wrap w-100">
        <input type="text" id="caja-msg" class="form-control w-50 mx-1" value="" placeholder="Ingrese su mensaje" /> 
        <button class="btn btn-success w-50 mx-1 " onclick="enviarChat()">Enviar msg</button>
    </div>
    </div>
</div>


{{> footer}}